<Window x:Class="ProjcForAukt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Аукцион" Height="450" Width="1050">

    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="35" />
            <RowDefinition Height="282*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="150*" />
            <ColumnDefinition Width="158*" />

            <ColumnDefinition Width="150*" />
            <ColumnDefinition Width="10" />
        </Grid.ColumnDefinitions>

        <Frame
            x:Name="PerexodNewPag"
            Grid.ColumnSpan="4"
            Grid.RowSpan="3"
            Visibility="Hidden"
            
            
            
            />

        <Button
            x:Name="Avtorizt"
            Grid.Column="2"
            Grid.Row="1"
           
            Content="Авторизация"
            Click="Avtorizt_Click"
           
            />

        <Button
            x:Name="Registration"
            Grid.Column="0"
            Grid.Row="1"
            
            Content="Регистрация"
            Click="Registrat_Click"
           
            />






    </Grid>
</Window>
